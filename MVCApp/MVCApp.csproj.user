<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <UsingTask AssemblyFile="$(MSBuildStartupDirectory)\MVCApp\packages\MSBuildTasks.1.5.0.235\tools\MSBuild.Community.Tasks.dll" TaskName="BuildCode" />
  <UsingTask AssemblyFile="$(MSBuildStartupDirectory)\MVCApp\packages\MSBuild.Extension.Pack.1.9.1\tools\net40\MSBuild.ExtensionPack.dll" TaskName="Nunit3" />
  <PropertyGroup>
    <DoNotCopyLocalIfInGac>true</DoNotCopyLocalIfInGac>
    <UseIISExpress>false</UseIISExpress>
    <ProjectView>ProjectFiles</ProjectView>
  </PropertyGroup>
  <PropertyGroup>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>Full</DebugType>
    <Optimize>false</Optimize>
    <!-- After Compile: Result will be saved in OutDir -->
    <!-- MAke this MSBuildStartupDirectory to work in command prompt  -->
    <!-- MAke this Solution to work in Visusl Studio   -->
    <OutDir>.\bin\</OutDir>
    <!-- Solutionproperties -->
    <SolutionProperties>
        OutDir=$(OutDir);
        Platform=$(Platform);
        Configuration=$(Configuration)
      </SolutionProperties>
    <!-- Configuration -->
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <BuildPlatform Condition=" '$(Platform)' == '' ">Any CPU</BuildPlatform>
  </PropertyGroup>
  <ItemGroup>
    <Solution Include="MVCApp.sln">
      <Properties>
                     $(SolutionProperties)
                 </Properties>
    </Solution>
  </ItemGroup>
  <ItemGroup>
    <BuildArtifactsDir Include="BuildArtifacts\" />
    <SolutionFile Include="MVCApp.sln" />
  </ItemGroup>
  <Target Name="EchoDate">
    <Exec Command="echo %25date%25" />
    <Message Text=" About to Call External EchoDate 	 " />
  </Target>
  <Target Name="ShowParameters" DependsOnTargets="EchoDate">
    <Message Text=" TestAssembly = @(TestAssembly)" />
    <Message Text=" MSBuildThisFileDirectory = $(MSBuildThisFileDirectory)" />
    <Message Text=" SolutionProperties = $(SolutionProperties)" />
    <Message Text=" MSBuildStartupDirectory = $(MSBuildStartupDirectory)" />
    <Message Text=" WebSiteFolderFullPath = $(WebSiteFolderFullPath)" />
    <Message Text=" MSBuildExtensionsPath = $(MSBuildExtensionsPath)" />
    <Message Text=" OutDir = $(OutDir)" />
    <Message Text=" SrcBasePath = $(SrcBasePath)" />
    <Message Text=" StyleCopArtifactPath = $(StyleCopArtifactPath)" />
  </Target>
  <Target Name="Clean" DependsOnTargets="ShowParameters">
    <RemoveDir Directories="@(BuildArtifactsDir)" />
  </Target>
  <Target Name="Init" DependsOnTargets="Clean">
    <MakeDir Directories="@(BuildArtifactsDir)" />
  </Target>
  <Target Name="BuildCode" DependsOnTargets="Init">
    <Message Text="BuildSolution called" />
    <MSBuild Projects="@(Solution)" Properties="Configuration=$(Configuration);Platform=$(Platform)" />
    <ItemGroup>
      <Assemblies Include="$(MSBuildStartupDirectory)\MVCApp\packages\NUnit.ConsoleRunner.3.7.0\tools\*.dll" />
    </ItemGroup>
    <CreateItem Include="$(MSBuildStartupDirectory)\MVCAppTests\obj\Debug\MVCAppTests.dll">
      <Output TaskParameter="Include" ItemName="TestAssembly" />
    </CreateItem>
    <Message Text=" MSBuildStartupDirectory = $(MSBuildStartupDirectory)" />
    <Message Text=" MSBuildThisFileDirectory = $(MSBuildThisFileDirectory)" />
  </Target>
  <Target Name="BeforeBuild">
    <Exec Command="..\.nuget\nuget restore MVCApp.sln" ContinueOnError="true" />
  </Target>
  <Target Name="Run">
    <CallTarget Targets="BuildCode" />
  </Target>
  <ProjectExtensions>
    <VisualStudio>
      <FlavorProperties GUID="{349c5851-65df-11da-9384-00065b846f21}">
        <WebProjectProperties>
          <StartPageUrl>
          </StartPageUrl>
          <StartAction>SpecificPage</StartAction>
          <AspNetDebugging>True</AspNetDebugging>
          <SilverlightDebugging>False</SilverlightDebugging>
          <NativeDebugging>False</NativeDebugging>
          <SQLDebugging>False</SQLDebugging>
          <ExternalProgram>
          </ExternalProgram>
          <StartExternalURL>
          </StartExternalURL>
          <StartCmdLineArguments>
          </StartCmdLineArguments>
          <StartWorkingDirectory>
          </StartWorkingDirectory>
          <EnableENC>False</EnableENC>
          <AlwaysStartWebServerOnDebug>True</AlwaysStartWebServerOnDebug>
        </WebProjectProperties>
      </FlavorProperties>
    </VisualStudio>
  </ProjectExtensions>
</Project>